[user]
  name = Rock
[init]
  defaultBranch = main
[core]
  editor = nvim
[alias]
  c = !git add -all && git commit -m
  s = !git status -s
  l = !git log --pretty=format:'%C(blue)%h %C(red)%d %C(yellow)%s %C(cyan)%cn, %C(green)%cr'
  t = !sh -c 'git tag -a $1 -m $1' -
  amend = !git add --all && git commit --amend --no-edit

